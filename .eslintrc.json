{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
      "airbnb",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "prettier/prettier": "error",
      "no-use-before-define": "off",
			"@typescript-eslint/no-use-before-define": [
				"error"
			],
	   	"import/extensions": [
	      "error",
	      "ignorePackages",
	      {
	        "ts": "never"
	      }
	    ]
    },
    "settings": {
	    "import/resolver": {
	      "typescript": {}
	    }
	  }
}
