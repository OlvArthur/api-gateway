{
  "name": "api-gateway",
  "packageManager": "yarn@3.2.3",
  "scripts": {
    "start": "nodemon --watch 'src/' --exec 'ts-node -r tsconfig-paths/register src/shared/infra/http/server.ts' -e ts",
    "dev:server": "ts-node-dev -r tsconfig-paths/register --inspect --ignore-watch node_modules ./src/shared/infra/http/server.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.14",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/node": "^18.7.18",
    "nodemon": "^2.0.19",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.0",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "express": "^4.18.1",
    "jsonwebtoken": "^8.5.1"
  }
}
